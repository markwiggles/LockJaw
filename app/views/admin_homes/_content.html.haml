

-# The content

%ul#sortable-contacts.sortable-list.col-lg-12

  -@admin_contacts.each do |contact|

    %li{id: contact.id, :class => ('opaque' if !contact.visible?)}

      %h3.text-primary
        =contact.heading
      %p
        -if contact.image_id != nil && contact.image_id != 'no_image'
          =image_tag contact.image_url, class:'thumbnail blog-img', style: "float: #{contact.image_position};"
        =add_single_line_breaks contact.content

      .edit-delete
        =link_to '<i class="fa fa-edit fa-lg image-link"></i>'.html_safe, edit_admin_contact_path(:id => contact.id), remote: true
        =link_to '<i class="fa fa-times-circle fa-lg image-link"></i>'.html_safe, {:action => 'delete', :id => contact.id},  remote: true
        =link_to '<i class="fa fa-file-photo-o fa-lg image-link"></i>'.html_safe, edit_image_admin_contact_path(:id => contact.id ), :id => contact.id, remote: true
