


-@admin_sections.each do |section|

  %li{id: section.id, class: dim_if_not_currently_visible(section)}

    %h4{class: ('hide-elem' if section.sub_heading == '') }
      =add_html_helpers(section.sub_heading)

    -if section.image_id != nil && section.image_id != 'no_image'
      =image_tag section.image_url_tab, class:'thumbnail blog-img', style: "float: #{section.image_position_tab};"
    %p
      =truncate(add_paragraph_breaks(section.content), length: section.truncation,
      omission: "#{link_to '........Read More', '#', class: 'read-more'}", :escape => false)



    .edit-delete
      =link_to '<i class="fa fa-edit fa-lg image-link"></i>'.html_safe, edit_admin_section_path(:id => section.id), remote: true
      =link_to '<i class="fa fa-times-circle fa-lg image-link"></i>'.html_safe, {:action => 'delete_section', :id => section.id},  remote: true
      =link_to '<i class="fa fa-file-photo-o fa-lg image-link"></i>'.html_safe, edit_image_admin_section_path(:id => section.id ), :id => section.id, remote: true
