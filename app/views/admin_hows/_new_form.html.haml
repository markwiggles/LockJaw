
%h3 Create New Step
.container.form-md

  =simple_form_for @admin_how, :url => {:action => 'create'}, remote: true do |f|

    =f.input :heading, autofocus: true, class: 'how'
    =f.input :content, as: :text, :required => true, class: 'how',:input_html => {:rows => 10, :cols => 54}
    %br
    =f.button :submit, 'Create New Step', class: 'btn-default'