

-# The content

%ul#sortable-hows.sortable-list.col-lg-12

  -@admin_hows.each do |how|

    %li{id: how.id, :class => ('opaque' if !how.visible?)}

      %h3.text-primary
        =how.heading
      %p.text-justify
      -if how.image_id != nil && how.image_id != 'no_image'
        =image_tag change_image_url_to_thumbnail(how.image_url), class:'thumbnail blog-img', style: "float: left;"
        =add_single_line_breaks how.content
      -if how.image_id != nil && how.image_id != 'no_image'
        =image_tag change_image_url_to_thumbnail(how.image_url_color), class:'thumbnail blog-img', style: "float: right;"

      .edit-delete
        =link_to '<i class="fa fa-edit fa-lg image-link"></i>'.html_safe, edit_admin_how_path(:id => how.id), remote: true
        =link_to '<i class="fa fa-times-circle fa-lg image-link"></i>'.html_safe, {:action => 'delete', :id => how.id},  remote: true
        =link_to '<i class="fa fa-file-photo-o fa-lg image-link"></i>'.html_safe, edit_image_admin_how_path(:id => how.id ), :id => how.id, remote: true