
%h3 Select Image:  #{@admin_how.heading}

.form-md

  =simple_form_for @admin_how, :url => {:action => 'change_image'}, remote: true do |f|

    =f.input :id, :as => :hidden
    =f.input :image_id, :as => :hidden, id: 'image_id'
    =f.input :image_id_color, :as => :hidden, id: 'image_id-color'


    %h4 Black and White Image
    #form-gallery
    %h4 Color Photo
    #form-gallery2


    =f.button :submit, 'Update How-It-Works Page', class: 'btn-default'


