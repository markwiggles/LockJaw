.container.admin

  .row.heading

    %h2 How It Works Updates

    -# New Link
    =link_to (button_tag '<i class="fa fa-navicon"></i> New'.html_safe, class: 'btn btn-default btn-lg new-btn'),
        new_admin_how_path, remote: true

  .row
    .col-lg-7
      #how-content
        -#  Show the current how in a sortable list
        =render 'content'

    -# Show the New/Edit form
    .col-lg-5
      .form-view.create-content




:javascript

  var ready = function () {


  initialiseSortableList('#sortable-hows','admin_hows/update_list_order', 'admin_hows/index')

  };

  $(document).ready(ready);
  $(document).on('page:load', ready);