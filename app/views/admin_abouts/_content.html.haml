

-# The content

%ul#sortable-abouts.sortable-list.col-lg-12

  -@admin_abouts.each do |about|

    %li{id: about.id, :class => ('opaque' if !about.visible?)}

      %h3.text-primary
        =about.heading
      %p
        -if about.image_id != nil && about.image_id != 'no_image'
          =image_tag about.image_url, class:'thumbnail blog-img', style: "float: #{about.image_position};"
        =add_paragraph_breaks about.content

      .edit-delete
        =link_to '<i class="fa fa-edit fa-lg image-link"></i>'.html_safe, edit_admin_about_path(:id => about.id), remote: true
        =link_to '<i class="fa fa-times-circle fa-lg image-link"></i>'.html_safe, {:action => 'delete', :id => about.id},  remote: true
        =link_to '<i class="fa fa-file-photo-o fa-lg image-link"></i>'.html_safe, edit_image_admin_about_path(:id => about.id ), :id => about.id, remote: true
