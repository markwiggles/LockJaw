.container.admin

  .row.heading

    %h2 Email Message Updates

    -# New Email Settings Link
    =link_to (button_tag '<i class="fa fa-navicon"></i> New'.html_safe, class: 'btn btn-default btn-lg new-btn'),
        new_admin_email_path, remote: true

  .row
    .col-lg-7
      #email-content
        -#  Show the current email in a sortable list
        =render 'content'

    -# Show the New/Edit form
    .col-lg-5
      .form-view.create-content



:javascript

  var ready = function () {

  initialiseSortableList('#sortable-emails','admin_emails/update_list_order', 'admin_emails/index')

  };

  $(document).ready(ready);
  $(document).on('page:load', ready);