
%h3 Edit Email Message

.container.form-md

  =simple_form_for @admin_email, :url => {:action => 'update'}, remote: true do |f|

    =f.input :id, :as => :hidden

    -# The switch button
    =render partial: 'admin_shared/switch_form', locals: {f: f, model_attribute: @admin_email, :param => 'admin_email'}

    -# EMAIL SETTINGS FORM

    =simple_form_for @admin_email, :url => {:action => 'update'}, remote: true do |f|
      =f.input :id, as: :hidden
      =f.input :subject, autofocus: true
      =f.input :heading
      =f.input :greeting
      =f.input :body, as: :text, :required => true,:input_html => {:rows => 3, :cols => 54}
      =f.input :signature,as: :text,:input_html =>{:rows => 3, :cols => 20}
      %br
      =f.button :submit, 'Update Email Message', class: 'btn-default'



:javascript

  var ready = function () {


    /*Call the custom jQuery method to initialise the switches
     jQuery.fn.initialiseSwitches = function (urlPost, urlCallback) */
  $('.switch').initialiseSwitches(null,null);

  };

  $(document).ready(ready);
  $(document).on('page:load', ready);

