

-# The content

%ul#sortable-emails.sortable-list.col-lg-12

  -@admin_emails.each do |email|

    %li{id: email.id, :class => ('opaque' if !email.visible?)}


      %p
        ="Subject: #{email.subject}"

      %p
        -if email.image_id != nil && email.image_id != 'no_image'
          =image_tag email.image_url, class:'thumbnail blog-img', style: 'float: left'
      %br
      %br
      %br

      %p.text-primary
        =email.heading

      %p
        ="#{email.greeting} <contact name>"

      %p
        =add_paragraph_breaks email.body
      %p
        =add_single_line_breaks email.signature

      .edit-delete
        =link_to '<i class="fa fa-edit fa-lg image-link"></i>'.html_safe, edit_admin_email_path(:id => email.id), remote: true
        =link_to '<i class="fa fa-times-circle fa-lg image-link"></i>'.html_safe, {:action => 'delete', :id => email.id},  remote: true
        =link_to '<i class="fa fa-file-photo-o fa-lg image-link"></i>'.html_safe, edit_image_admin_email_path(:id => email.id ), :id => email.id, remote: true
      %hr