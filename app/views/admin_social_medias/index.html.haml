.container.admin

  .row.heading

    %h2 Social Media Updates

    -# New Testimonial Link
    =link_to (button_tag '<i class="fa fa-navicon"></i> New'.html_safe, class: 'btn btn-default btn-lg new-btn'),
        new_admin_social_media_path, remote: true

  .row
    #social_media-view
      =render partial: 'shared/social_media', locals: {social_medias: @social_medias_visible}

  .row
    .col-lg-7
      #social_media-content
        -#  Show the current social_media in a sortable list
        =render 'content'

    -# Show the New/Edit form
    .col-lg-5
      .form-view.create-content




:javascript

  var ready = function () {

  var listElement = '#sortable-social_medias';
  var urlPost = 'admin_social_medias/update_list_order';
  var urlCallback = 'admin_social_medias/view';
  initialiseSortableList(listElement, urlPost, urlCallback);

  };

  $(document).ready(ready);
  $(document).on('page:load', ready);