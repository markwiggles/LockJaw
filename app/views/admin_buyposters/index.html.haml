.container.admin

  .row.heading

    %h2 Poster Updates

    -# New Testimonial Link
    =link_to (button_tag '<i class="fa fa-navicon"></i> New'.html_safe, class: 'btn btn-default btn-lg new-btn'),
        new_admin_buyposter_path, remote: true

  .row
    .col-lg-7
      #buyposter-content
        -#  Show the current buyposter in a sortable list
        =render 'content'

    -# Show the New/Edit form
    .col-lg-5
      .form-view.create-content




:javascript

  var ready = function () {


  initialiseSortableList('#sortable-buyposters','admin_buyposters/update_list_order', 'admin_buyposters/index')

  };

  $(document).ready(ready);
  $(document).on('page:load', ready);